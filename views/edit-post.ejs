<%- include("partials/header.ejs") %>

<h1>You are editing a post:</h1>

<form action="/" method="POST">
  <input type="hidden" name="index" value="<%= index %>" />

  <input
    type="text"
    name="title"
    placeholder="Title"
    value="<%= post.title %>"
  />
  <input
    type="text"
    name="content"
    placeholder="Write your post here..."
    value="<%= post.content %>"
  />

  <input type="submit" value="Add post" />
  <a href="/">Cancel</a>
</form>

